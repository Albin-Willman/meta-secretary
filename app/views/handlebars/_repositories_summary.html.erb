<%= render_handlebar github_repositories_summary_path do  %>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <th><%= t('common.repo_type') %></th>
        <th><%= t('common.count') %></th>
      </thead>
      <tbody>
          <tr>
            <td><%= t('common.public') %></td>
            <td>{{public_repo_count}}</td>
          </tr>
          <tr>
            <td><%= t('common.private') %></td>
            <td>{{private_repo_count}}</td>
          </tr>
          <tr>
            <td><%= t('common.total') %></td>
            <td>{{total_repo_count}}</td>
          </tr>
      </tbody>
    </table>
    <p>
      <%= link_to '{{organization_link}}', class: 'btn btn-default pull-right', target: '_blank' do %>
        <%= MetaDefines::Github::ORG_NAME.capitalize %>
        <%= icon_for :github %>
      <% end %>
    </p>
    <p>
      <strong><%= t('common.repositories') %></strong>
    </p>
    <ul>
      {{#each repositories}}
        <li>
          <%= link_to '{{name}}', '{{html_url}}', target: '_blank' %>
          <%= content_tag :span, ' ({{language}})' %>
        </li>
      {{/each}}
    </ul>
  </div>
<% end %>

