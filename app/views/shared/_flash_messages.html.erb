<% flash.each do |type, message| %>
  <div class="row flash-message-box">
    <div class="col-lg-6">
      <div class="alert <%= bootstrap_class_for(type) %> fade in">
        <button class="close" data-dismiss="alert">&times;</button>
        <strong><%= message %></strong>
      </div>
    </div>
  </div>
<% end %>

